{
  "name": "lm-web-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run build:packages && pnpm run build:web",
    "build:packages": "pnpm -F @lm/types -F @lm/utils -F @lm/components run build",
    "build:web": "pnpm -F @lm/lm-antd-admin run build",
    "check": "pnpm run check:type",
    "check:type": "tsc --noEmit --skipLibCheck",
    "check:type:packages": "pnpm -F @lm/types -F @lm/utils -F @lm/components -F @lm/lm-antd-admin run type-check",
    "dev": "pnpm run dev:packages && pnpm run dev:web",
    "dev:packages": "pnpm -F @lm/components run dev",
    "dev:web": "pnpm -F @lm/lm-antd-admin run dev",
    "dev:play": "pnpm -F @lm/playground run dev",
    "lint": "eslint . --fix --max-warnings 0",
    "format": "prettier . --write --ignore-path .gitignore",
    "prepare": "pnpm run build:packages"
  },
  "devDependencies": {
    "@types/eslint": "catalog:",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vitejs/plugin-vue": "*",
    "@vitejs/plugin-vue-jsx": "*",
    "ant-design-vue": "*",
    "cross-env": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "*",
    "eslint-plugin-vue": "*",
    "prettier": "*",
    "terser": "*",
    "typescript": "*",
    "unbuild": "*",
    "vite": "*",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "*",
    "vue": "*",
    "vue-eslint-parser": "catalog:",
    "vue-router": "*",
    "vue-tsc": "*"
  },
  "volta": {
    "node": "23.11.0"
  }
}
